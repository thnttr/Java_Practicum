import javafx.scene.shape.Shape;

public class MainAction {
    public interface Action {
    }

    public static class DrawAction implements Action {
        private double startX;
        private double startY;
        private double endX;
        private double endY;
        private String color;
        private double lineWidth;
        private Class<? extends Shape> shapeClass;

        public DrawAction(double startX, double startY, double endX, double endY, String color, double lineWidth, Class<? extends Shape> shapeClass) {
            this.startX = startX;
            this.startY = startY;
            this.endX = endX;
            this.endY = endY;
            this.color = color;
            this.lineWidth = lineWidth;
            this.shapeClass = shapeClass;
        }

        public double getStartX() {
            return startX;
        }

        public double getStartY() {
            return startY;
        }

        public double getEndX() {
            return endX;
        }

        public double getEndY() {
            return endY;
        }

        public String getColor() {
            return color;
        }

        public double getLineWidth() {
            return lineWidth;
        }

        public Class<? extends Shape> getShapeClass() {
            return shapeClass;
        }
    }

    public static class TextAction implements Action {
        private double x;
        private double y;
        private String text;
        private String color;
        private double lineWidth;

        public TextAction(double x, double y, String text, String color, double lineWidth) {
            this.x = x;
            this.y = y;
            this.text = text;
            this.color = color;
            this.lineWidth = lineWidth;
        }

        public double getX() {
            return x;
        }

        public double getY() {
            return y;
        }

        public String getText() {
            return text;
        }

        public String getColor() {
            return color;
        }

        public double getLineWidth() {
            return lineWidth;
        }
    }

    public static class UndoAction implements Action {
    }

    public static class UndoAllAction implements Action {
    }

    public static class RedoAction implements Action {
    }
}
